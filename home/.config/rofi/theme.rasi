* {
    bg-col:  #0d0e11;
    bg-col-light: #313244;
    border-col: #a8a9ee;
    selected-col: #313244;
    blue: #89b4fa;
    mauve: #a8a9ee;
    fg-col: #e7e3ff;
    fg-col2: #fab387;
    grey: #6c7086;

    width: 35%;
    font: "JetBrains Mono 12";
}

element-text, element-icon {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 45%;
    border: 2px;
    border-color: @border-col;
    background-color: @bg-col;
    border-radius: 10px;
    location: center;
    anchor: center;
}

mainbox {
    background-color: @bg-col;
    children: [inputbar, listview];
}

inputbar {
    children: [prompt, entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @mauve;
    padding: 6px 12px;
    text-color: @bg-col;
    border-radius: 10px;
    margin: 20px 0px 0px 20px;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}

entry {
    padding: 8px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
    placeholder: "Search...";
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 20px 10px 20px;
    columns: 1;
    lines: 6;
    background-color: @bg-col;
}

element {
    padding: 8px;
    background-color: @bg-col;
    text-color: @fg-col;
    border-radius: 10px;
}

element-icon {
    size: 28px;
}

element selected {
    background-color:  @selected-col;
    text-color: @mauve;
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 10px;
    margin: 20px 0px 0px 20px;
    text-color: @mauve;
    background-color: @bg-col;
}
