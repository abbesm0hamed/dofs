 binds {
    Mod+Return { spawn "ghostty"; }
    Mod+Shift+T { spawn "ghostty" "--class=com.mitchellh.ghostty.floating"; }
    Mod+Shift+Return { spawn "foot"; }
    Mod+Alt+Return { spawn "alacritty"; }
    Mod+T { spawn "kitty"; }
    Mod+B { spawn "sh" "-c" "~/.config/niri/scripts/floating-wrapper.sh kitty floating-btop btop"; }
    Mod+G { spawn "sh" "-c" "~/.config/niri/scripts/floating-wrapper.sh kitty floating-yazi yazi"; }
    Mod+D { spawn "sh" "-c" "~/.config/niri/scripts/floating-wrapper.sh kitty floating-lazydocker lazydocker"; }
    Mod+Shift+D { spawn "sh" "-c" "~/.config/niri/scripts/toggle-dock.sh"; }
    Mod+Shift+G { spawn "sh" "-c" "~/.config/niri/scripts/floating-wrapper.sh kitty floating-ranger ranger"; }
    Mod+Shift+W { spawn "sh" "-c" "~/.config/niri/scripts/floating-wrapper.sh kitty floating-weather bash ~/.config/niri/scripts/weather.sh"; }
    Mod+Alt+B cooldown-ms=500 { spawn "sh" "-c" "~/.config/niri/scripts/toggle-waybar.sh"; }
    Alt+Z { spawn "flatpak" "run" "app.zen_browser.zen"; }
    Alt+M { spawn "flatpak" "run" "org.fedoraproject.MediaWriter"; }
    Mod+Space { spawn "fuzzel" "--width=40%" "--lines=5"; }
    Alt+Ctrl+L {
        spawn "hyprlock"
    }
    Alt+E { spawn "nautilus"; }
    Alt+T { spawn "zathura"; }  // Quick PDF viewer launch
    Alt+A { spawn "chromium-browser" "--app=https://chatgpt.com"; }
    Alt+Shift+C { spawn "chromium-browser" "--app=https://claude.ai/new"; }
    Alt+D { spawn "chromium-browser" "--app=https://discord.com/app"; }
    Alt+W { spawn "chromium-browser" "--app=https://web.whatsapp.com"; }
    Alt+N { spawn "chromium-browser" "--app=https://notion.so"; }
    Alt+F { spawn "chromium-browser" "--app=https://figma.com"; }

    // Screenshots
    // Built-in screenshot fallbacks (basic functionality)
    Mod+Shift+S { screenshot-screen; }
    Mod+Shift+V { screenshot-window; }
    Mod+Print { screenshot; }
    Print { spawn "sh" "-c" "~/.config/niri/scripts/screenshot.sh region"; }  
    Shift+Print { spawn "sh" "-c" "~/.config/niri/scripts/screenshot.sh window"; }  
    Ctrl+Print { spawn "sh" "-c" "~/.config/niri/scripts/screenshot.sh screen"; }  
    
    // Screen Recording with Audio Support
    Alt+Print { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh toggle-region"; }  
    Ctrl+Alt+Print { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh toggle-screen"; }  
    Alt+Shift+Print { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh toggle-region-audio"; }  
    Ctrl+Shift+Print { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh toggle-screen-audio"; }  
    
    // Audio-only recording
    Alt+Ctrl+A { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh toggle-audio-only"; }  
    
    // Stop any active recording
    Alt+Ctrl+Shift+R { spawn "sh" "-c" "~/.config/niri/scripts/screencast.sh stop"; }  
    
    // Clipboard Management
    Alt+Ctrl+V { spawn "sh" "-c" "~/.config/niri/scripts/clipboard-manager.sh"; }  
    Mod+N { spawn "sh" "-c" "~/.config/waybar/scripts/mako-history-menu.sh"; } // notifications
    
    // System Controls
    Alt+Space { spawn "sh" "-c" "~/.config/niri/scripts/system-controls.sh"; }

    Alt+P { spawn "sh" "-c" "~/.config/niri/scripts/project-launcher.sh"; }
    Alt+Shift+F { spawn "sh" "-c" "~/.config/niri/scripts/global-search.sh"; }
    Alt+Ctrl+W { spawn "sh" "-c" "~/.config/niri/scripts/wallpaper-picker.sh"; }
    Alt+S { spawn "sh" "-c" "~/.config/niri/scripts/settings-menu.sh"; }
    Alt+L { spawn "sh" "-c" "~/.config/waybar/scripts/power-menu.sh"; }
    Alt+Shift+Slash { spawn "sh" "-c" "~/.config/niri/scripts/binds-menu.sh"; }
    
    // Language switching
    Alt+Mod+Ctrl+Space { switch-layout "next"; }

    // Utility tools
    // Alt+Ctrl+K { spawn "sh" "-c" "pkill wshowkeys || wshowkeys -a bottom"; }  // Toggle key display
    // Alt+Ctrl+D { spawn "sh" "-c" "pgrep -x gromit-mpx >/dev/null && gromit-mpx --toggle || gromit-mpx -k none -u none"; }  // Toggle drawing mode
    Alt+Ctrl+P { spawn "sh" "-c" "hyprpicker -a"; }  // Color picker (copies to clipboard)

    // Example volume keys mappings for PipeWire & WirePlumber.
    // The allow-when-locked=true property makes them work even when the session is locked.
    XF86AudioMicMute allow-when-locked=true { spawn "pactl" "set-source-mute" "@DEFAULT_SOURCE@" "toggle"; }
    XF86AudioMute allow-when-locked=true { spawn "pactl" "set-sink-mute" "@DEFAULT_SINK@" "toggle"; }
    XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "-l" "1.0" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "bash" "-c" "current=$(brightnessctl g); max=$(brightnessctl m); min=$((max * 5 / 100)); new=$((current - max * 5 / 100)); [ $new -lt $min ] && new=$min; brightnessctl s $new"; }
	XF86MonBrightnessUp   allow-when-locked=true { spawn "brightnessctl" "set" "+5%"; }

    Mod+Tab repeat=false { toggle-overview; }

    Mod+Shift+Q { close-window; }

    Mod+H  { focus-column-left; }
    Mod+J  { focus-window-or-workspace-down; }
    Mod+K  { focus-window-or-workspace-up; }
    Mod+L { focus-column-right; }
    Mod+Shift+H  { move-column-left; }
    Mod+Shift+J  { move-window-down-or-to-workspace-down; }
    Mod+Shift+K  { move-window-up-or-to-workspace-up; }
    Mod+Shift+L { move-column-right; }

    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }
    Mod+Ctrl+Home { move-column-to-first; }
    Mod+Ctrl+End  { move-column-to-last; }

    Ctrl+Shift+H { focus-monitor-left; }
    Ctrl+Shift+L { focus-monitor-right; }
    Ctrl+Shift+K { focus-monitor-up; }
    Ctrl+Shift+J { focus-monitor-down; }

    Mod+Shift+Ctrl+Left  { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+Down  { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+Up    { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+Right { move-column-to-monitor-right; }
    Mod+Shift+Ctrl+H     { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+J     { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+K     { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+L     { move-column-to-monitor-right; }

    // Alternatively, there are commands to move just a single window:
    // Mod+Shift+Ctrl+Left  { move-window-to-monitor-left; }
    // ...

    // And you can also move a whole workspace to another monitor:
    // Mod+Shift+Ctrl+Left  { move-workspace-to-monitor-left; }
    // ...

    Mod+W { toggle-column-tabbed-display; }
    
    Mod+Alt+J      { focus-workspace-down; }
    Mod+Alt+K        { focus-workspace-up; }
    Mod+Ctrl+K { move-window-to-workspace-up; }
    Mod+Ctrl+J { move-window-to-workspace-down; }
    // Mod+Ctrl+J { move-column-to-workspace-down; }
    // Mod+Ctrl+K   { move-column-to-workspace-up; }

    Mod+Shift+U         { move-workspace-down; }
    Mod+Shift+I         { move-workspace-up; }

    // You can bind mouse wheel scroll ticks using the following syntax.
    // These binds will change direction based on the natural-scroll setting.

    // To avoid scrolling through workspaces really fast, you can use
    // the cooldown-ms property. The bind will be rate-limited to this value.
    // You can set a cooldown on any bind, but it's most useful for the wheel.
    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+WheelScrollRight      { focus-column-right; }
    Mod+WheelScrollLeft       { focus-column-left; }
    Mod+Ctrl+WheelScrollRight { move-column-right; }
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }

    // Usually scrolling up and down with Shift in applications results in
    // horizontal scrolling; these binds replicate that.
    Mod+Shift+WheelScrollDown      { focus-column-right; }
    Mod+Shift+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+Shift+1 { move-window-to-workspace 1; }
    Mod+Shift+2 { move-window-to-workspace 2; }
    Mod+Shift+3 { move-window-to-workspace 3; }
    Mod+Shift+4 { move-window-to-workspace 4; }
    Mod+Shift+5 { move-window-to-workspace 5; }
    Mod+Shift+6 { move-window-to-workspace 6; }
    Mod+Shift+7 { move-window-to-workspace 7; }
    Mod+Shift+8 { move-window-to-workspace 8; }
    Mod+Shift+9 { move-window-to-workspace 9; }

    // Alternatively, there are commands to move just a column:
    // Alt+Shift+1 { move-column-to-workspace 1; }

    // Switches focus between the current and the previous workspace.
    Alt+Tab { focus-workspace-previous; }

    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }

    // Consume one window from the right to the bottom of the focused column.
    Mod+Comma  { consume-window-into-column; }
    // Expel the bottom window from the focused column to the right.
    Mod+Period { expel-window-from-column; }

    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R { reset-window-height; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }

    // Makes the column "fill the rest of the space".
    Mod+Ctrl+F { expand-column-to-available-width; }

    Mod+C { center-column; }

    // Center all fully visible columns on screen.
    Mod+Ctrl+C { center-visible-columns; }

    // set-column-width "100" will make the column occupy 200 physical screen pixels.
    Alt+Minus { set-column-width "-10%"; }
    Alt+Equal { set-column-width "+10%"; }

    // Finer height adjustments when in column with other windows.
    Alt+Shift+Minus { set-window-height "-10%"; }
    Alt+Shift+Equal { set-window-height "+10%"; }

    // Move the focused window between the floating and the tiling layout.
    Alt+V       { toggle-window-floating; }
    Alt+Shift+V { switch-focus-between-floating-and-tiling; }

    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    // The quit action will show a confirmation dialog to avoid accidental exits.
    Mod+Shift+E { quit; }
    Ctrl+Alt+Delete { quit; }

    Mod+Shift+P { power-off-monitors; }
}
