window-rule {
    geometry-corner-radius 0 
    clip-to-geometry true
}

layer-rule {
    match namespace="wallpaper"
    place-within-backdrop true
}

layer-rule {
    match namespace="hyprpaper"
    place-within-backdrop false
}

window-rule {
    match title=r#".*[Pp]rivate.*|.*[Ii]ncognito.*"#
    block-out-from "screen-capture"
}

window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
    draw-border-with-background false
    tiled-state true
}

window-rule {
    match app-id=r#"^(code|Code|VSCodium|vscodium|Windsurf|windsurf|Cursor|cursor|Antigravity|antigravity|Termius)$"#
    open-maximized true
}

// gaming config
window-rule {
    match app-id=r#"^([Ss]team)$"#
    open-maximized true
}

window-rule {
    match app-id=r#"^([Ss]team)$"# title="^Friends List$"
    match app-id=r#"^([Ss]team)$"# title="^Steam - News$"
    match app-id=r#"^([Ss]team)$"# title=".* - Chat$"
    match app-id=r#"^([Ss]team)$"# title="^Settings$"
    match app-id=r#"^([Ss]team)$"# title=".* - Property$"
    match app-id=r#"^([Ss]team)$"# title="^Steam Guard.*$"
    open-floating true
}

window-rule {
    match app-id="gamescope"
    open-maximized true
}

window-rule {
    match app-id=r#"^(ghostty|Ghostty|com\.mitchellh\.ghostty)$"#
    open-maximized true
    opacity 0.96
    draw-border-with-background false
    shadow { off; }
}

window-rule {
    match app-id=r#"^(org\.wezfurlong\.wezterm|org\.wezfurlong\.wezterm-nightly)$"#
    open-maximized true
    opacity 0.96
    draw-border-with-background false
}

window-rule {
    match app-id="kitty"
    opacity 0.93
    draw-border-with-background false
}

window-rule {
    match app-id=r#"^([Zz]en.*|app\.zen_browser\.zen|firefox|chromium|chromium-browser|google-chrome|brave)$"#
    open-on-workspace "browser"
    default-column-width { proportion 1.0; }
    open-maximized-to-edges true
    clip-to-geometry true
}

window-rule {
    match app-id=r#"^(Slack|discord|chrome-web.whatsapp.com__-Default|telegram|signal)$"#
    open-on-workspace "communication"
    open-maximized true
    clip-to-geometry true
}

window-rule {
    match app-id="obsidian"
    open-maximized true
    clip-to-geometry true
}

window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
    clip-to-geometry true
}

window-rule {
    match app-id="pavucontrol"
    match app-id="blueman-manager"
    match app-id="nm-connection-editor"
    match app-id="org.gnome.PowerStats"
    match app-id="system-config-printer"
    match app-id="com.gabm.satty"
    open-floating true
    clip-to-geometry true
}

window-rule {
    match app-id=r#"^(xdg|Xdg)-desktop-portal-(gtk|gnome)$"#
    open-floating true
    clip-to-geometry true
    default-column-width { proportion 0.7; }
    default-window-height { proportion 0.7; }
    border { width 1; }
    focus-ring { off; }
}

window-rule {
    match app-id="org.gnome.Nautilus"
    open-floating true
    clip-to-geometry true
    default-column-width { proportion 0.8; }
    default-window-height { proportion 0.8; }
}

window-rule {
    match app-id="dev.bragefuglseth.Keypunch"
    open-floating true
    clip-to-geometry true
    default-column-width { proportion 0.6; }
    default-window-height { proportion 0.4; }
}

window-rule {
    match app-id="floating-btop"
    match app-id="floating-ranger"
    match app-id="floating-yazi"
    match app-id="floating-lazydocker"
    match app-id="floating-weather"
    match app-id="floating-terminal"
    match app-id="com.mitchellh.ghostty.floating"
    default-column-width { proportion 0.8; }
    default-window-height { proportion 0.8; }
    open-floating true
    clip-to-geometry true
}

window-rule {
    match app-id=r#"^org\.gnome\.Keepassxc$"#
    match app-id=r#"^org\.gnome\.World\.Secrets$"#
    block-out-from "screen-capture"
    clip-to-geometry true
}
