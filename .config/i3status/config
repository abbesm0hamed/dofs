general {
        colors = true
        interval = 1
        output_format = "i3bar"
}

order += "xkb_layout"  # Added keyboard layout
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "volume master"
order += "tztime local"

xkb_layout {
        format = "KB: %layout"
        cache_timeout = 1
}

wireless _first_ {
        format_up = "W: %essid %quality"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "CHARGING"
        status_bat = "BATTERY"
        status_unk = "UNKNOWN"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

volume master {
        format = "VOL: %volume"
        format_muted = "VOL: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "RAM: %percentage_used"
        threshold_degraded = "90%"
}

disk "/" {
        format = "DISK: %avail"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
