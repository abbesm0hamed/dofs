# Include configurations
include $HOME/.config/i3/rules.conf
include $HOME/.config/i3/modes.conf
include $HOME/.config/i3/themes/kanagawa.conf

# Basic settings
set $mod Mod4
floating_modifier $mod
font pango:JetBrains Mono Nerd Font 8

# Maximum Performance Settings
force_xinerama no
force_focus_wrapping no
popup_during_fullscreen smart
focus_on_window_activation urgent
mouse_warping none
focus_follows_mouse no
workspace_auto_back_and_forth no
force_display_urgency_hint 0ms

# Disable title bars for better performance
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders none

# Disable window title bars
for_window [class="^.*"] border pixel 1

# Floating mode settings
bindsym $mod+Shift+f floating toggle

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Keyboard layout switching
exec_always --no-startup-id "setxkbmap -layout us,ar -option grp:alt_shift_toggle"
bindsym ISO_Next_Group exec --no-startup-id "setxkbmap -query | grep -q 'layout:\s\+us' && setxkbmap ar || setxkbmap us"

# Autostart applications
exec --no-startup-id dbus-update-activation-environment --all
exec --no-startup-id $HOME/.config/scripts/autostart.sh
exec_always --no-startup-id $HOME/.config/scripts/setup-wallpaper.sh
# exec_always --no-startup-id sleep 2 && $HOME/.config/polybar/scripts/launch_polybar.sh
# i3status-rust configuration
bar {
    position bottom
    status_command i3status-rs ~/.config/i3status-rust/config.toml
    tray_output primary
    font pango:JetBrains Mono Nerd Font 9
    colors {
        background #2A2A320
    }
}
exec_always --no-startup-id autotiling
exec --no-startup-id sxhkd
