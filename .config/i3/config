# Include configurations
include $HOME/.config/i3/rules.conf
include $HOME/.config/i3/modes.conf
include $HOME/.config/i3/themes/kanagawa.conf
include $HOME/.config/i3/keybindings.conf

# Basic settings
set $mod Mod4
floating_modifier $mod
font pango:Lilex Nerd Font 10

# Performance Optimizations
force_xinerama no
force_focus_wrapping no
popup_during_fullscreen smart
focus_on_window_activation urgent
mouse_warping none
focus_follows_mouse no
workspace_auto_back_and_forth no
force_display_urgency_hint 0ms

# Additional Performance Settings
title_align left
for_window [all] title_window_icon on
for_window [urgent=latest] focus
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Window and title settings
default_border normal
default_floating_border normal
hide_edge_borders none

# Optimized workspace layouts
workspace $ws1 output primary
workspace $ws2 output primary

# Default layout mode for all workspaces
workspace_layout tabbed

# Set specific layouts for workspaces
# for_window [workspace=$ws1] layout default
# for_window [workspace=$ws2] layout tabbed
# for_window [workspace=$ws3] layout stacking

# Title format
for_window [class=".*"] title_format " %title"
for_window [class=".*"] title_window_icon padding 3px

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Keyboard layout switching
# exec_always --no-startup-id "setxkbmap -layout us,fr -option grp:alt_shift_toggle"
# bindsym ISO_Next_Group exec --no-startup-id "setxkbmap -query | grep -q 'layout:\s\+us' && setxkbmap fr || setxkbmap us"

# Autostart applications
exec --no-startup-id dbus-update-activation-environment --all
exec --no-startup-id $HOME/.config/scripts/autostart.sh
exec_always --no-startup-id $HOME/.config/scripts/setup-wallpaper.sh
# exec_always --no-startup-id sleep 2 && $HOME/.config/polybar/scripts/launch_polybar.sh
# i3status-rust configuration
bar {
    position bottom
    status_command i3status-rs ~/.config/i3status-rust/config.toml
    tray_output primary
    # font pango:JetBrains Mono Nerd Font 8
    colors {
        background #2A2A320
    }
}



