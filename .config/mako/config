# Catppuccin Mocha theme for Mako notification daemon

# Layout
max-visible=5
layer=overlay
anchor=top-right
margin=10
width=350
height=100

# Styling (Catppuccin Mocha)
background-color=#1e1e2edd
text-color=#cdd6f4
border-color=#89b4fa
border-size=1
border-radius=0
padding=15

# Font
font=SpaceMono Nerd Font 10

# Icons
max-icon-size=48
icon-path=/usr/share/icons/Adwaita

# Timing
default-timeout=8000
ignore-timeout=1

# History (keep notifications for waybar script)
max-history=50

# Grouping
group-by=app-name

# Urgency levels
[urgency=low]
background-color=#1e1e2edd
text-color=#9399b2
border-color=#6c7086
default-timeout=4000

[urgency=normal]
background-color=#1e1e2edd
text-color=#cdd6f4
border-color=#89b4fa
default-timeout=8000

[urgency=critical]
background-color=#1e1e2edd
text-color=#cdd6f4
border-color=#f38ba8
default-timeout=0
